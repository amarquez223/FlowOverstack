<div class="container">
	<div class="row pt-3">
			<h1>Preguntas</h1>
			<table class="table">
				<% @questions.each do |q| %>
					<tr>
						<td>
							<h4><%= q.qvotes.count %></h4>
							<p>Votos</p>
						</td>
						<td>
							<h4><%= q.answers.count %></h4>
							<p>Respuestas</p>
						</td>
						<td>
							<h4><%= link_to q.title, question_path(q.id), class: "titulo" %></h4>
							<p>Pregunt√≥ <%= q.user.email %> hace <%= time_ago(q.created_at) %></p>
						</td>
					</tr>
				<% end %>
			</table>
	</div>
</div>